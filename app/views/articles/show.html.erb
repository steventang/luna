<% provide(:title, @article.title) %>

<div class="sixteen columns">
	<div class="article-title"><%= link_to @article.title, @article %></div>
	<div class="article-info">
	  <span class="user"><%= link_to @article.user.username, @article.user %></span>
	  <span class="timestamp">
	    (Posted on <%= @article.created_at.strftime("%B %d, %Y") %>)
	  </span>
	</div>
  <span class="text_content"><%= raw(@article.text_content) %></span>
  <div class="article-category">
		Tags: <%= @article.tag_list %>
  <div>
	  <% if current_user?(@article.user) %>
	    <%= link_to "delete", @article, method: :delete,
	                                     data: { confirm: "Delete this article?" },
	                                     title: @article.title %>
	  <% end %>
	 </div>
	 <div class="fb-comments" data-href="http://esportspn.herokuapp.com" data-numposts="5" data-colorscheme="light"></div>
</div>