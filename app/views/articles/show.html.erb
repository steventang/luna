<% provide(:title, @article.title) %>

<div class="sixteen columns">
	<div class="post-body">
		<div class="article-title"><%= link_to @article.title, @article %></div>
		<div class="article-info">
		  <span class="user"><%= link_to @article.user.username, @article.user %></span>
		  <span class="timestamp">
		    (Posted on <%= @article.created_at.strftime("%B %d, %Y") %>)
		  </span>
		</div>
	  <span class="text_content"><%= raw(@article.text_content) %></span>
	  <span class="article-category">
			Tags: 
			<% for tag in @article.tag_list %>
				<%= link_to tag, controller: "articles", action: "tags", tag: tag %> 
			<% end %>
	  </span>
	  <% if current_user?(@article.user) %>
	    <%= link_to "(delete)", @article, method: :delete,
	                                     data: { confirm: "Delete this article?" },
	                                     title: @article.title %>
	  <% end %>
	 </div>
	 <div class="fb-comments" data-href="http://esportspn.herokuapp.com/articles/<%= @article.id %>" data-numposts="5" data-colorscheme="light"></div>
</div>