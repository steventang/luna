<header class="header">
	<nav>
		<ul class="nav nav-pills navbar-header" role="tablist">
			<% if signed_in? %>
				<li role="presentation" class="dropdown">
					<a class="dropdown-toggle" data-toggle="dropdown" href="#">
						Post <span class="caret"></span>
					</a>
					<ul class="dropdown-menu" role="menu">
						<li><%= link_to "Post article", new_article_path %></li>
						<li><%= link_to "Post art", new_art_path %></li>
					</ul>
				</li>
				<li class="dropdown">
					<a class="dropdown-toggle" data-toggle="dropdown" href="#">
						<%= current_user.username %> <span class="caret"></span>
					</a>
					<ul class="dropdown-menu" role="menu">
						<li><%= link_to "My Profile", current_user %></li>
						<li><%= link_to "Settings", edit_user_path(current_user) %></li>
						<li><%= link_to "Users", users_path %></li>
					</ul>
				</li>
			<% else %>
				<li><%= link_to "Sign up", signup_path, :class => "btn signup-btn" %></li>
				<li><%= link_to "Sign in", signin_path %></li>
			<% end %>
			<li><%= link_to "Home", root_path %></li>
			<li><%= link_to "About", about_path %></li>
			<% if signed_in? %>
				<li><%= link_to "Sign out", signout_path, :method => "delete" %>
			<% end %>
		<ul>
	</nav>
</header>